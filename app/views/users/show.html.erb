<h1>User Profile</h1>

<%= link_to 'Delete Account', user_path(current_user), method: :delete, class: "button tiny alert" %>

<h3>Update Role?</h3>

<%= form_for @user do |f| %>

  <%= f.label :role %>
  <%= f.select :role, ["Astronaut", "Member"] %>

  <%= f.submit "Update", class: "button tiny success" %>
<% end -%>

<h1>Create A Book Listing:</h1>
<%= form_for [@user, @book] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :URL %>
  <%= f.text_field :URL %>

  <%= f.submit "List Book", class: "button tiny success" %>
<% end -%> 
