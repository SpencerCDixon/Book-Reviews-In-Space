
<h1>Books In Space</h1>

<%= link_to 'Sign Out', destroy_user_session_path, method: :delete  %>
<%= link_to 'Sign in', new_user_session_path %>

<% if current_user %>
  <%= link_to 'Profile', user_path(current_user) %>
<% end -%>

<h1>All Book Listings:</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th>URL</th>
  </tr>
  <% @books.each do |b| %>
    <tr>
      <td><%= b.user.email %></td>
      <td><%= b.title %></td>
      <td><%= b.description %></td>
      <td><%= b.URL %></td>
    </tr>
  <% end -%>
</table>

